<Window x:Class="PlanetEarth.Windows.AddProductWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanetEarth.Windows"
        mc:Ignorable="d"
        Title="AddProductWin" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Название"/>
            <TextBox x:Name="nameBox"/>
            <Label Content="Описание"/>
            <TextBox x:Name="descriptionBox"/>
            <Label  Content="Страна"/>
            <ComboBox x:Name="countryCB"/>
            <Label Content="Отрасль"/>
            <ComboBox x:Name="branchCB"/>
            <Label Content="Производитель"/>
            <ComboBox x:Name="manufacturerCB"/>
            <Label Content="Количество"/>
            <TextBox x:Name="amountBox"/>
            <Label Content="Дата выпуска продукции"/>
            <DatePicker x:Name="datePicker"/>
            <Button x:Name="funcButton" Click="FuncButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
